<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.androidplot.xy.XYPlot
        style="@style/APDefacto.Dark"
        android:id="@+id/aprHistoryPlot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        androidPlot.backgroundPaint.color="#171717"
        androidPlot.borderPaint.color="#171717"
        androidplot.renderMode="use_background_thread"
        androidplot.graphHeight="float"
        androidplot.domainLineThickness="1px"
        ap:title="ACTIVES"
        ap:domainTitle="Domain"
        ap:rangeTitle="Range"
        ap:backgroundColor="#171717"
        ap:borderColor="#171717"
        ap:borderThickness="1px"
        />

</LinearLayout>